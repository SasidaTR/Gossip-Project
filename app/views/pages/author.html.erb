<div class="container" style="height:80vh">
  <h1>Profil de <span style="#ff60aa"><%= @title%></span></h1>
  <h3 class="mb-5">Ses ragots :</h3>

  <div class="container row justify-content-center">
    <% @gossips.each do |gossip| %>
      <% if gossip.title == @title%>
        <div class="card mb-3 mx-4 card-home" style="width: 18rem;">
          <div class="card-body">
            <p class="card-text"><em><%= gossip.content %></em></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <a href="<%= root_path %>" class="btn-auteur btn btn-danger mt-3 rounded-pill">Revenir au menu</a>
</div>